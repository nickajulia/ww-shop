{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign faq_content_data = product.metafields.faq_content %}

{% if faq_content_data != blank %}
  <div class="products-faqs page-accent--{{ section.settings.color_accent }}">
    <div class="page-width isolate section-{{ section.id }}-padding">
      <div class="faq_head">
        <h5>{{ section.settings.subheading }}</h5>
        <h1>{{ section.settings.title }}</h1>
      </div>
      <div class="accordion">
        {%- for i in (i..faq_content_data.size) -%}
          {%- assign faqQusAns = 'faq-content-' | append : i -%}
          {% assign faqQusAnsArr = product.metafields.faq_content[faqQusAns] %}
          {%- assign title = faqQusAnsArr | split: ' | ' | first -%}
          {%- assign content = faqQusAnsArr | split: ' | ' | last -%}
          {% if title != blank%}
            <details>
              <summary>
                {{ title | escape }}
              </summary>
              <div class="accordion__content rte" id="feature-Accordion-{{ forloop.index }}">
                {{ content }}
              </div>
            </details>
          {% endif %}
        {%- endfor -%}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Product FAQ's",
  "tag": "section",
  "class": "product-section-faqs",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "label",
      "default": "Frequently asked questions"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "FAQ"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "select",
      "id": "color_accent",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "dark",
      "label": "Color accent"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Product FAQ's"
    }
  ]
}
{% endschema %}