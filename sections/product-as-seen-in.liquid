{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign faq_content_data = product.metafields.faq_content %}

{% if faq_content_data != blank %}
  <div class="section-logos page-accent--{{ section.settings.color_accent }}">
    <div class="page-width isolate section-{{ section.id }}-padding">
      {% if section.settings.title != blank %}
        <div class="section-head {{ section.settings.text_alignment }}">
          <h2 class="h1">{{ section.settings.title }}</h2>
        </div>
      {% endif %}

      {% if section.settings.image != blank %}
        <div class="logos-wrapper {{ section.settings.text_alignment }}">
          <img
            src="{{ section.settings.image | image_url: width: 500, height: 500 }}"
            class="password-logo"
            alt="{{ section.settings.image.alt | default: shop.name | escape }}"
            style="max-width: {{ section.settings.logo_max_width }}px"
            width="{{ section.settings.logo_max_width }}"
            height="{{ section.settings.logo_max_width | divided_by: section.settings.logo.aspect_ratio }}"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "As seen in",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "As seen in"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Logos"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 200,
      "max": 650,
      "step": 50,
      "default": 650,
      "unit": "t:sections.main-password-header.settings.logo_max_width.unit",
      "label": "t:sections.main-password-header.settings.logo_max_width.label"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "select",
      "id": "color_accent",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "dark",
      "label": "Color accent"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "As seen in"
    }
  ]
}
{% endschema %}