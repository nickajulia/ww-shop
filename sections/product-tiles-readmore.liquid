<div class="product-tiles-readmore page-accent--{{ section.settings.color_accent }}">
	<div class="page-width isolate section-{{ section.id }}-padding">
		<h2>Subscription Kits</h2>
	</div>
</div>

{% schema %}
{
  "name": "Products With Readmore",
  "tag": "section",
  "class": "section s-product-tiles-readmore",
  "settings": [
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "select",
      "id": "color_accent",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "dark",
      "label": "Color accent"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Products With Readmore"
    }
  ]
}
{% endschema %}